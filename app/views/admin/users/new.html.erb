<h1>Реєстрація адміністратора</h1>
<%= form_with model: @user, url: admin_users_path do |f| %>
  <%= f.label :name, "Ім'я" %>
  <%= f.text_field :name %>

  <%= f.label :email, "Email" %>
  <%= f.email_field :email %>

  <%= f.label :password, "Пароль" %>
  <%= f.password_field :password %>

  <%= f.submit "Створити адміністратора" %>
<% end %>
